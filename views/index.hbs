<form action="./" method="post">
<label for="url">Enter an https:// URL:</label>
  <div class="input-group mt-4">
    <input name="url" type="url" class="form-control" placeholder="https://example.com" pattern="https://.*" 
      required aria-label="Enter an URL" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Shorten</button>
  </div>
</form>